#!/usr/bin/env bash
set -e
__version=@PROJECT_VERSION@
which mpv > /dev/null

source `dirname ${BASH_SOURCE[0]}`/../lib/extractors.sh

usage()
{
    man iplay
}

while getopts "vhe:lubt" opt; do
    case "$opt" in
        v) echo Version: $__version; exit 0;;
        l) echo "Known extractors:"; printf "* %s\n" "${extractors[@]}"; exit 0;;
        e) __extractor="$OPTARG";;
        u) __only_url=1;;
        h) usage; exit 0;;
        b) __background=1;;
        t) __traverse=1;;
    esac
done
shift $((OPTIND - 1))

__url="$1"
__webpage=`http "$__url"`

if [[ ! -z "$__traverse" ]]; then
    __url=`traverse "$__url" <<< "$__webpage"`
    __webpage=`http "$__url"`
fi

if [[ ! -z "$__extractor" ]]; then
    __pre=`pre_$__extractor <<< "$__webpage"`
    __url=`$__extractor "$__url" "$__pre"`
else
    for ex in ${extractors[@]}; do
        __pre=`pre_$ex <<< "$__webpage"` || continue
        [[ ! -z "$__pre" ]] || continue
        __url=`$ex "$__url" "$__pre"`
        break
    done
fi

if [[ -z "$__only_url" ]]; then
    if [[ -z "$__background" ]]; then
        mpv "$__url"
    else
        (set -m; exec mpv "$__url" &>/dev/null &)
    fi
else
    echo $__url
fi
